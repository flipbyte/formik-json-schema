    "dependencies": {
        "formik": "^1.3.2",
        "validatorjs": "^3.15.1",
        "codemirror": "^5.41.0",
        "react-autosuggest": "^9.4.3",
        "react-codemirror2": "^5.1.0",
        "react-dropzone": "^7.0.1",
        "react-quill": "^1.3.3",
        "react-select": "^2.3.0",
        "react-sortable-hoc": "^0.8.4"
    },
    "peerDependencies": {
        "react": "^16.7.0",
        "react-dom": "^16.7.0",
        "prop-types": "^15.6.2",
        "@fortawesome/fontawesome-free": "^5.6.3"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^5.6.3",
        "axios": "^0.18.0",
        "bootstrap": "^4.2.1",
        "codemirror": "^5.43.0",
        "enzyme": "^3.8.0",
        "enzyme-adapter-react-16": "^1.7.1",
        "formik": "^1.4.2",
        "gh-pages": "^2.0.1",
        "inferno": "^5.0.0",
        "nwb": "0.23.x",
        "react": "^16.5.2",
        "react-dom": "^16.5.2",
        "remark-lint": "^6.0.4",
        "validatorjs": "^3.15.1"
    },
    "author": "",
    "homepage": "",
