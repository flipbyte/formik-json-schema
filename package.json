        "react-json-form",
        "react-json-schema-form",
        "json-schema-form",
        "json-form",
        "formik-json",
        "formik-schema",
        "schema-form",
        "form",
        "validation",
        "bootstrap"
    ],
    "remarkConfig": {
        "plugins": [
            "remark-preset-lint-recommended"
        ]
